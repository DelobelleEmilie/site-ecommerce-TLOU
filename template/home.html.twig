{% extends "shared/layout.html.twig" %}

{% block title %}
    Bienvenue sur le Shop !
{% endblock %}

{% block content %}
        <h1>Bienvenue sur la boutique!</h1>
        <p class="lead text-muted">Achetez vos produit sur notre boutique en ligne</p>
    <div class="container-fluid bg-grey">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <center>
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/711XSQPzWRL._AC_SX385_.jpg" style="width: 25%; border-radius: 10%;" alt="Image 1">
            </div>
            <div class="carousel-item">
                <img src="/images/1576505791-7792-jaquette-avant.webp" style="width: 25%; border-radius: 10%;" alt="Image 2">
            </div>
            <div class="carousel-item">
                <img src="/images/ellie-the-last-of-us-funko-pop.jpg" style="width: 25%; border-radius: 10%;" alt="Image 3">
            </div>
            <div class="carousel-item">
                <img src="/images/the-last-of-us-part-2-face-i80873.jpg" style="width: 25%; border-radius: 10%;" alt="Image 4">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </center>
    </div>
    </div>

    <script>
        $('.carousel').carousel({
            interval: 20000
        });
    </script>

    <div style="clear:both"></div>
    </div>
{% endblock %}

