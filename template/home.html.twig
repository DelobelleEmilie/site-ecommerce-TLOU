{% extends "shared/layout.html.twig" %}

{% block title %}
    Bienvenue sur le Shop !
{% endblock %}

{% block content %}
    <h1>Bienvenue sur la boutique!</h1>
    <p class="lead text-muted">Achetez vos produit sur notre boutique en ligne</p>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="20000">
        <center>
            <div class="container">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div style="width: 100%; height: 200px; background: red;"></div>
                        </div>
                        <div class="carousel-item">
                            <div style="width: 100%; height: 200px; background: blue;"></div>
                        </div>
                        <div class="carousel-item">
                            <div style="width: 100%; height: 200px; background: green;"></div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <div class="container-fluid bg-grey">
                {#                indicateur d'ordre #}
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                </ol>
                {#                slides #}
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/711XSQPzWRL._AC_SX385_.jpg" style="width: 25%; border-radius: 10%;"
                             alt="Image 1">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/1576505791-7792-jaquette-avant.webp" style="width: 25%; border-radius: 10%;"
                             alt="Image 2">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/ellie-the-last-of-us-funko-pop.jpg" style="width: 25%; border-radius: 10%;"
                             alt="Image 3">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/the-last-of-us-part-2-face-i80873.jpg" style="width: 25%; border-radius: 10%;"
                             alt="Image 4">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                {#                controles #}
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Précédent</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Suivant</span>
                </a>
            </div>
        </center>

    </div>

    <div style="clear:both"></div>
    </div>
{% endblock %}

