{% extends "shared/layout.html.twig" %}

{% block title %}
    Administration des produits
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row text-center">
            <h3>Liste des produits</h3>
        </div>
        <div>
            <a
                    href="{{ addUrl }}"
                    class="btn btn-success"
            >
                <i class="fa-sharp fa-solid fa-plus"></i>
                 
                Ajouter
            </a>
        </div>
        {#        thead, c'est l'entete#}
        {#        et dans tbody, on boucle sur les produits pour dessiner les lignes#}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Libellé</th>
                <th>Prix</th>
                <th>Catégorie</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.label }}</td>
                    <td>{{ entity.price }}</td>
                    <td>{{ entity.category }}</td>
                    <td>
                        {#                        url dynamique#}
                        <a
                                class="btn btn-success"
                                href="{{ entity.show }}"
                        >
                            {#                            ajouter une icon#}
                            <i class="fa-sharp fa-solid fa-eye"></i>
                        </a>
                        <a
                                class="btn btn-primary"
                                href="{{ entity.edit }}"
                        >
                            <i class="fa-sharp fa-solid fa-pen"></i>
                        </a>
                        <a
                                class="btn btn-danger"
                                href="{{ entity.delete }}"
                        >
                            <i class="fa-sharp fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor%}
            </tbody>
        </table>
    </div>

{% endblock %}