{% extends "/shared/layout.html.twig" %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block content %}

	<div class="container">
		<div class="d-flex">
			<img src="https://upload.wikimedia.org/wikipedia/commons/6/67/The_Last_of_Us_Logo_2.png" class="m-auto" alt="" width="50%" height="auto"/>
		</div>
		{% if error %}
			<div class="alert alert-danger m-2 text-center">
				{{ error }}
			</div>
		{% endif %}
		<form method="POST" action="">
			<div class="d-flex flex-column align-items-center my-3 p-2 border rounded">
				<div class="d-grid">
					<label for="email">Adresse e-mail</label>
					<input  type="email" placeholder="Email" name="mail" id="email"/>
				</div>
				<div class="d-grid">
					<label for="password">5€CURIZ3D</label>
					<input type="password" placeholder="NewPassword" name="password" id="NewPassword"/>
					<div class="d-grid">
					<label for="password">5€CURIZ3D</label>
					<input type="password" placeholder="NewPassword" name="password_confirm" id="NewPassword"/>
					</div>
					<button type="submit" class="btn btn-primary" name="submit">Reset</button>
				</div>
			</div>
		</form>
	</div>

{% endblock %}