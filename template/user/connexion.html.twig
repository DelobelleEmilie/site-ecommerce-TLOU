{% extends "/shared/layout.html.twig" %}

{% block title %}Authentification
{% endblock %}

{% block content %}

	<div class="container">
		<div class="d-flex">
			<img src="https://upload.wikimedia.org/wikipedia/commons/6/67/The_Last_of_Us_Logo_2.png" class="m-auto" alt="" width="50%" height="auto"/>
		</div>
		{% if error %}
		<div class="alert alert-danger m-2 text-center">
			{{ error }}
		</div>
		{% endif %}
		<form method="POST" action="">
			<div class="d-flex flex-column align-items-center my-3 p-2 border rounded">
				<div class="d-grid">
					<label for="email">Adresse e-mail</label>
					<input  type="email" placeholder="Email" name="email" id="email" value="{{ email }}"/>
				</div>
				<div>
					<label for="newpassword" class="form-label">Nouveau mot de passe</label>
					<input
							type="password2"
							placeholder="5€CURIZ3D"
							class="form-control"
							id="newpassword"
							name="newpassword"
							value="{{ form.newpassword }}"
					/>
				</div>
				<span>Si j'ai oubliez mon mot de passe</span>
				<a href="/lostpassword">Mot de passe oublié</a>
				<button type="submit" class="btn btn-primary mt-3">Connexion</button>
			</div>
	
		</form>
		<div class="d-flex justify-content-center">
			<div>
				<span>Si je n'ai pas de compte</span>
				<a href="/inscription">créer un compte</a>
			</div>
		</div>
	</div>

{% endblock %}